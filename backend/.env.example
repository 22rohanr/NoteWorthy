# Copy this file to .env and fill in real values.
# Do NOT commit .env to version control.

SECRET_KEY=change-me-in-production
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Comma-separated list of allowed CORS origins (use * for all)
CORS_ORIGINS=*

# Path to the Firebase service-account key (default: ./firebase-private-key.json)
# FIREBASE_KEY_PATH=firebase-private-key.json

# Fragella API key (required for seed_database.py --download)
FRAGELLA_API_KEY=your-api-key-here
